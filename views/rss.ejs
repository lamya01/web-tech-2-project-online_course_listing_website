        <div>
                
            <h1>Hi <b><%= user.name %></b>! Welcome to your RSS feed</h1>
            <hr>
            <div id="rss-feed">
                <%  
                    xml = JSON.parse(xmldata)
                    var rssinfo = xml.rss.channel[0]
                    var rsstitle = rssinfo.title[0]
                    var rsslink = rssinfo.link[0]
                    const itemlist = rssinfo.item     
                    

                    console.log("-----new req------")
                    console.log(itemlist[0])

                    <!-- do the html bit here -->
                %>
                
                <%  for (var i=0; i < itemlist.length;  i++ ) { %>
                        
                    <br/> 
                    <h3><a href = <%= itemlist[i].link %> target="_blank"> <%= itemlist[i].title %></a></h3>
                    <h5><%= itemlist[i].pubDate %></h5>
                    <br>
                    <p><%= itemlist[i].description %></p>
                    <br>
                    <br>

                <% } %>



            </div>

        </div>


        <!-- jQuery CDN -->
        <script src="https://code.jquery.com/jquery-1.12.0.min.js"></script>
        <!-- Bootstrap Js CDN -->
